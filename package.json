{
    "name": "ava-util",
    "version": "1.0.0",
    "description": "Native javascript utils library.",
    "main": "lib/index.js",
    "module": "es/index.js",
    "scripts": {
        "tsc": "tsc && tsc --outDir lib --module commonjs",
        "doc": "typedoc --out docs src --exclude src/index.ts --mode modules --theme ./typedoc-theme",
        "test": "jest",
        "lint": "eslint --ext .ts,.js ./",
        "lint:fix": "eslint --fix --ext .ts,.js ./",
        "lint-staged": "lint-staged"
    },
    "files": [
        "es",
        "lib"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/avaforvr/ava-util.git"
    },
    "author": "avaforvr",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/avaforvr/ava-util/issues"
    },
    "homepage": "https://github.com/avaforvr/ava-util#readme",
    "devDependencies": {
        "@babel/core": "^7.7.5",
        "@babel/preset-env": "^7.7.6",
        "@babel/preset-typescript": "^7.7.4",
        "@typescript-eslint/eslint-plugin": "^2.11.0",
        "@typescript-eslint/parser": "^2.11.0",
        "babel-jest": "^24.9.0",
        "eslint": "^6.7.2",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-jest": "^23.1.1",
        "eslint-plugin-node": "^10.0.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "husky": "^3.1.0",
        "jest": "^24.9.0",
        "lint-staged": "^9.5.0",
        "typedoc": "^0.15.4",
        "typescript": "^3.7.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,ts}": "npm run lint"
    }
}
