{
    "compilerOptions": {
        //输出目录
        "outDir": "es",
        //指定生成哪个模块系统代码
        "module": "esnext",
        //指定ECMAScript目标版本
        "target": "esnext",
        //编译过程中需要引入的库文件的列表
        "lib": [
            "esnext",
            "dom"
        ],
        //生成相应的 .d.ts文件
        "declaration": true
    },
    "include": [
        "src/**/*"
    ]
}
