{
    "compilerOptions": {
        //输出目录
        "outDir": "dist",
        //指定生成哪个模块系统代码
        "module": "commonjs",
        //指定ECMAScript目标版本
        "target": "ES5",
        //编译过程中需要引入的库文件的列表
        "lib": [
            "DOM",
            "ES5",
            "ScriptHost"
        ],
        //生成相应的 .d.ts文件
        "declaration": true,
        //模块解析策略
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ]
}
